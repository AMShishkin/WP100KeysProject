                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ButEnter">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.284" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="TBPass">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="RecPass">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot представляет корневую сетку, где размещается все содержимое страницы-->
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/100KEYS;component/Assets/bg_8bit.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="800"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFD2D2D2" Height="368" Margin="5,40,5,0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Top"/>
        <Rectangle x:Name="RecTitle" Fill="Black" Height="35" Margin="0" Stroke="Black" VerticalAlignment="Top" StrokeThickness="0"/>
        <TextBlock x:Name="TBIndex" HorizontalAlignment="Left" Height="35" Margin="20,0,0,0" TextWrapping="Wrap" Text="#4444" VerticalAlignment="Top" Width="100" Foreground="#FFC72F16" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="45.333"/>
        <TextBlock x:Name="Keys" HorizontalAlignment="Right" Height="27" Margin="0,8,20,0" TextWrapping="Wrap" Text="Keys: 123" VerticalAlignment="Top" Width="110" TextAlignment="Center" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="29.333" Foreground="#FFD2D0D2"/>
        <Image x:Name="Pic" Height="360" Margin="9,44,9,0" VerticalAlignment="Top" Source="/Resources/KEY2.jpg" Stretch="Fill" DoubleTap="Pic_DoubleTap"/>
        <Rectangle x:Name="RecPass" Fill="#FFD2D2D2" Height="62" Margin="103,415,103,0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <CompositeTransform/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <TextBlock x:Name="TBPass" Height="62" Margin="106,415,106,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="76" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" Foreground="Black" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Text="1234">
            <TextBlock.RenderTransform>
                <CompositeTransform/>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:Name="ButKey" Content="?" Height="90" Margin="-7,401,362,0" VerticalAlignment="Top" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButDel" Content="&lt;" Height="90" Margin="362,401,-7,0" VerticalAlignment="Top" Background="#FFD2D2D2" BorderBrush="Black" Foreground="Black" BorderThickness="2" FontSize="66.667" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" Click="ButDel_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey1" Content="1" Height="90" Margin="10,0,350,211" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey1_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey2" Content="2" Height="90" Margin="123,0,237,211" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey2_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey3" Content="3" Height="90" Margin="237,0,123,211" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey3_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey4" Content="4" Height="90" Margin="350,0,10,211" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey4_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
