            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey5" Content="5" Height="90" Margin="10,0,350,133" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey5_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey6" Content="6" Height="90" Margin="123,0,237,133" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey6_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey7" Content="7" Height="90" Margin="237,0,123,133" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey7_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey8" Content="8" Height="90" Margin="350,0,10,133" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey8_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey9" Content="9" Height="90" Margin="10,0,350,55" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey9_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButKey0" Content="0" Height="90" Margin="123,0,237,55" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButKey0_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButEnter" Content="ENTER" Height="90" Margin="237,0,10,55" VerticalAlignment="Bottom" Background="#FFD2D2D2" BorderBrush="Black" BorderThickness="2" Foreground="Black" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="66.667" Click="ButEnter_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform/>
            </Button.RenderTransform>
        </Button>
        <Image x:Name="BigPic" Margin="-160,155" Source="/Resources/KEY1.jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" Visibility="Collapsed" ManipulationStarted="BigPic_ManipulationStarted">
            <Image.RenderTransform>
                <CompositeTransform Rotation="90"/>
            </Image.RenderTransform>
        </Image>

        <adduplex:AdControl x:Name="adDuplexAd" AppId="133535" VerticalAlignment="Bottom" Height="65" Margin="0,0,0,-15"/>
        <TextBlock x:Name="TBPassCount" Height="35" Margin="140,0" TextWrapping="Wrap" Text="*" VerticalAlignment="Top" Foreground="#FFD2D2D2" FontFamily="/100KEYS;component/Fonts/Fonts.zip#Ice Pixel7" FontSize="40" TextAlignment="Center"/>
    </Grid>

</phone:PhoneApplicationPage>